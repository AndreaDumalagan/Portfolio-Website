doctype html
style.

  @import url('https://fonts.googleapis.com/css?family=Montserrat|Raleway&display=swap');

  html {
    margin: 0;
    height: 100%;
    font-family: Montserrat;
    font-size: 14px;
    background-attachment: fixed;
    background-repeat: no-repeat;
    background-image: linear-gradient(to bottom, #ff4d00, #ff4424, #ff3d39, #ff384a, #ff375a);
  }
  ul { 
    margin: 50px auto 0; 
    padding: 0; 
    list-style: none; 
    display: table;
    width: 600px;
    text-align: center;
  }
  li { 
    display: table-cell; 
    position: relative; 
    padding: 15px 0;
  }
  .hover {
    color: #fff;
    text-transform: uppercase;
    text-decoration: none;
    letter-spacing: 0.15em;
    
    display: inline-block;
    padding: 15px 20px;
    position: relative;
  }
  .hover:after {    
    background: none repeat scroll 0 0 transparent;
    bottom: 0;
    content: "";
    display: block;
    height: 2px;
    left: 50%;
    position: absolute;
    background: #fff;
    transition: width 0.3s ease 0s, left 0.3s ease 0s;
    width: 0;
  }
  .hover:hover:after { 
    width: 100%; 
    left: 0; 
  }
  @media screen and (max-height: 300px) {
    ul {
      margin-top: 40px;
    }
  }
  div{
    color: white;
    font-size: 20px;
  }
  #wrap{
    margin-top: 2%;
    margin-left: 10%;
    min-width: 600px;
  }
  img{
    max-width: 30%;
    border-radius: 50%;
    -webkit-filter: drop-shadow( 0px 5px 4px rgba(0, 0, 0, .4));
    filter: drop-shadow( 0px 5px 4px rgba(0, 0, 0, .4));
  }
  #toggle{
    margin-top: -2%;
  }
  #kash{
    margin-right: 15%;
    margin-left: 15%;
    margin-top: 2%;
  }
  #kash-title{
    font-size: 50px;
    font-weight: bold;
  }
  #kash-subtitle{
    font-size: 20px;
  }
  #kash-descrip{
    margin-top: 2%;
    font-size: 25px;
  }
  #cosmic{
    margin-left: 10%;
  }
  #pdb{
    margin-left: 10%;
  }
